<ParaViewPlugin>
    <ServerManagerConfiguration>
        <ProxyGroup name="sources">
            <SourceProxy name="MyCityJSONReader" class="vtkMyCityJSONReader" label="MyCityJSON">

                <Documentation long_help="Does stuff." short_help="Does more stuff.">
                    Reads CityJSON files
                </Documentation>

                <StringVectorProperty
                        name="FileName"
                        animateable="0"
                        command="SetFileName"
                        number_of_elements="1"
                        panel_visibility="never">
                    <FileListDomain name="files"/>
                    <Documentation>
                        This property specifies the file name for the CityJSON reader.
                    </Documentation>
                </StringVectorProperty>

                <Hints>
                    <ReaderFactory extensions="json" file_description="CityJSON files" />
                </Hints>

            </SourceProxy>
        </ProxyGroup>
    </ServerManagerConfiguration>
</ParaViewPlugin>
